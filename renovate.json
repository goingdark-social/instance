{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["kubernetes", "kustomize", "helm-values"],

  "kustomize": {
    "fileMatch": ["(^|/)kustomization\\.ya?ml(\\.j2)?$"]
  },

  "kubernetes": {
    "fileMatch": ["(^|/).+\\.(ya?ml)$"]
  },

  "helm-values": {
    "fileMatch": ["(^|/).*/values(-.*)?\\.ya?ml$"]
  }
}