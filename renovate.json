{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "kubernetes",
    "kustomize",
    "helm-values"
  ],
  "kustomize": {
    "managerFilePatterns": [
      "/(^|/)kustomization\\.ya?ml(\\.j2)?$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/).+\\.(ya?ml)$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/(^|/).*/values(-.*)?\\.ya?ml$/"
    ]
  }
}
